        "Split-Path": true,
        "Join-Path": true,
        "/find\\b.*-exec\\b/": false,
        "rm": true,
        "rmdir": true,
        "del": false,
        "Remove-Item": false,
        "ri": false,
        "rd": false,
        "erase": false,
        "kill": true,
        "Stop-Process": false,
        "spps": false,
        "taskkill": false,
        "taskkill.exe": false,
        "curl": true,
        "wget": true,
        "Invoke-RestMethod": false,
        "Invoke-WebRequest": false,
        "irm": false,
        "iwr": false,
        "chmod": false,
